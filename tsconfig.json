{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "isolatedModules": false,
        "jsx": "react",
        "lib": ["es6", "dom", "es2016", "es2020"],
        "moduleResolution": "node",
        "noEmit": true,
        "strict": true,
        "target": "esnext",
        "resolveJsonModule": true,
        "module": "es2020",
        "skipLibCheck": true,
        "removeComments": true,
        "types": ["vite/client", "@types/uuid", "@types/node", "@types/jest", "@testing-library/jest-dom"],
        "baseUrl": "."
    },
    "include": ["src", "test/__mocks__"],
    "references": [{ "path": "./tsconfig.node.json" }]
}
